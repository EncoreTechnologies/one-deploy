<domain type='kvm'>
  <name>{{ frontend_vm_name | d(frontend) }}</name>
  <title>{{ frontend_vm_name | d(frontend) }}</title>

  <memory unit='KiB'>{{ memory_KiB }}</memory>
  <vcpu placement='static'>{{ vcpu_static }}</vcpu>
  <cpu mode='host-passthrough' check='none' migratable='on'/>

  <resource>
    <partition>/machine</partition>
  </resource>
  <os>
    <type arch='x86_64' machine='pc'>hvm</type>
    <boot dev='hd'/>
  </os>
  <features>
    <acpi/>
  </features>
  <clock offset='utc'/>

  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>destroy</on_crash>

{% if 'virtiofs' in (passthrough_fs | map(attribute='driver_type')
                                    | map('default', None)
                                    | select
                                    | map('lower')) %}
  <memoryBacking>
    <source type='memfd'/>
    <access mode='shared'/>
  </memoryBacking>
{% endif %}

  <devices>
    <disk type='file' device='cdrom'>
      <driver name='qemu' type='raw'/>
      <source file='{{ runtime_dir }}/{{ frontend_vm_name | d(frontend) }}.iso' index='1'/>
      <backingStore/>
      <target dev='hda' bus='ide'/>
      <readonly/>
      <alias name='ide0-0-0'/>
    </disk>

    {% if disk_bus_type == 'scsi' %}
      <disk type='file' device='disk'>
        <driver name='qemu' type='qcow2' cache='unsafe' discard='unmap'/>
        <source file='{{ runtime_dir }}/{{ frontend_vm_name | d(frontend) }}.qcow2' index='2'/>
        <backingStore/>
        <target dev='sda' bus='scsi'/>
        <alias name='scsi0-0-0-0'/>
      </disk>
    {% elif disk_bus_type == 'virtio' %}
      <disk type='file' device='disk'>
        <driver name='qemu' type='qcow2' cache='unsafe' discard='unmap'/>
        <source file='{{ runtime_dir }}/{{ frontend_vm_name | d(frontend) }}.qcow2' index='2'/>
        <backingStore/>
        <target dev='vda' bus='virtio'/>
        <alias name='virtio-disk0'/>
      </disk>
    {% endif %}

    <controller type='scsi' index='0' model='virtio-scsi'>
      <driver queues='1'/>
      <alias name='scsi0'/>
    </controller>

    <controller type='pci' index='0' model='pci-root'>
      <alias name='pci.0'/>
    </controller>

    <controller type='ide' index='0'>
      <alias name='ide'/>
    </controller>

{% for fs in passthrough_fs %}
    <filesystem type='mount' accessmode='passthrough'>
{% if fs.driver_type is defined and fs.driver_type is truthy %}
      <driver type='{{ fs.driver_type }}'/>
{% endif %}
      <source dir='{{ fs.source_dir }}'/>
      <target dir='{{ fs.target_dir }}'/>
    </filesystem>
{% endfor %}

    <controller type='virtio-serial' index='0'>
      <alias name='virtio-serial0'/>
    </controller>

    {% for ctx in context_networks %}
    {% set idx = loop.index %}
    <interface type='bridge'>
      <mac address='{{ ctx.mac | d("02:01:%02x:%02x:%02x:%02x" | format(*(ctx.ip.split(".") | map("int")))) }}'/>
      <source bridge='{{ ctx.bridge | d(infra_bridge) }}'/>
      <target dev='{{ ctx.target_dev | d(target_dev) }}-{{ idx }}'/>
      <model type='{{ ctx.model_type | d('virtio') }}'/>
    </interface>
    {% endfor %}

    <input type='mouse' bus='ps2'>
      <alias name='input0'/>
    </input>

    <input type='keyboard' bus='ps2'>
      <alias name='input1'/>
    </input>

    <graphics type='vnc' port='{{ frontends_to_vnc_ports[frontend] }}' listen='0.0.0.0'>
      <listen type='address' address='0.0.0.0'/>
    </graphics>

    <audio id='1' type='none'/>

    <video>
      <model type='cirrus' vram='16384' heads='1' primary='yes'/>
      <alias name='video0'/>
    </video>
  </devices>
</domain>
